{
  "printWidth": 80,
  "singleQuote": true,
  "trailingComma": "all",
  "arrowParens": "avoid",
  "overrides": [
    {
      "files": [
        "*.json"
      ],
      "options": {
        "printWidth": 2
      }
    },
    {
      "files": [
        "*.code-workspace"
      ],
      "options": {
        "printWidth": 0,
        "quoteProps": "preserve",
        "singleQuote": false,
        "parser": "json5"
      }
    }
  ]
}
